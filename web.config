<configuration>  
    <system.webServer>     

      <handlers>  
           <add name="iisnode-socketio" path="index.js" verb="*" modules="iisnode"/>  
     </handlers>  

     <iisnode enableXFF="true" />
     <directoryBrowse enabled="false"/>
    <webSocket enabled="false" /> 
     
     <rewrite>  
          <rules>  
               <rule name="SocketIO" >  
                   <match url="sockets.io.+"/>  
                   <action type="Rewrite" url="index.js"/>
               </rule>  

               <rule name="web">
                    <match url="web/*" />
                    <action type="Rewrite" url="index.js" />
                </rule>
          </rules>  
     </rewrite>  
     
   </system.webServer>  
 </configuration>